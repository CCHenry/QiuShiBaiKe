<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/action_bar_bg</item>
        <item name="colorPrimaryDark">@color/action_bar_bg</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/LaunchActivityAnimalTheme</item>
    </style>

    <style name="LaunchActivityAnimalTheme" parent="@android:style/Animation.Activity">
        <!-- Customize your theme here. -->

            <item name="android:activityOpenEnterAnimation">@anim/launch_open_enter_animal</item>
            <item name="android:activityOpenExitAnimation">@anim/launch_open_exit_animal</item>
            <item name="android:activityCloseEnterAnimation">@anim/launch_close_enter_animal</item>
            <item name="android:activityCloseExitAnimation">@anim/launch_close_exit_animal</item>

    </style>
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->
    <style  name="navigation_title_text_style">

        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>

        <item name="android:textColor">@color/lesswhitesmoke</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp0</item>
    </style>
    <style name="textStyle0"><!--列表item头像名称字体-->
        <item name="android:textSize">@dimen/sp6</item>
        <item name="android:textColor">@color/less_grey</item>
    </style>
    <style name="textStyle1"><!--列表item下面的评论，好笑等字体-->
        <item name="android:textSize">@dimen/sp4</item>
        <item name="android:textColor">@color/less_grey</item>
    </style>
    <style name="textStyle2"><!--评论列表item头像名称字体-->
        <item name="android:textSize">@dimen/sp5</item>
        <item name="android:textColor">@color/less_grey</item>
    </style>
    <style name="textStyle3"><!--列表基本信息内容字体-->
        <item name="android:textSize">@dimen/sp2</item>
        <item name="android:lineSpacingExtra">@dimen/margin1</item>
        <item name="android:textColor">@color/dimgrey</item>
    </style>
    <style name="textStyle4"><!--评论内容字体-->
        <item name="android:textSize">@dimen/sp0</item>
        <item name="android:lineSpacingExtra">@dimen/margin5</item>
        <item name="android:textColor">@color/dimgrey</item>
    </style>
</resources>
