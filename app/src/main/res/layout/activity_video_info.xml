<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".C.info.activity.video.VideoInfoActivity">

    <include
        layout="@layout/layout_action_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin6"
        android:layout_marginRight="@dimen/margin6"
        android:layout_marginTop="@dimen/margin6">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h0"
            android:gravity="center_vertical">

            <ImageView
                android:id="@id/imageView0"
                android:layout_width="@dimen/size0"
                android:layout_height="@dimen/size0"
                android:layout_margin="@dimen/margin0"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                style="@style/textStyle0"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="奥斯丁发哈是的哈四大hi哦啊是低哦按花是滴哦哈斯殴打后我爱上电视好滴哈似乎滴啊手动天生的 "

            style="@style/textStyle3"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin1"
            >

            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <SurfaceView
                        android:id="@+id/surfaceView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin0"/>

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin1"
            android:orientation="horizontal"

            >

            <TextView
                style="@style/textStyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好笑 "/>

            <TextView
                android:id="@id/textView2"
                style="@style/textStyle1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="284"
                />

            <TextView
                style="@style/textStyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ·评论"
                />

            <TextView
                android:id="@id/textView3"
                style="@style/textStyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33"
                />

            <TextView
                style="@style/textStyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ·分享 "
                />

            <TextView
                android:id="@id/textView4"
                style="@style/textStyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                />

            <TextView
                style="@style/textStyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ·再生 "
                />

            <TextView
                android:id="@id/textView5"
                style="@style/textStyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h3"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新评论"
                    style="@style/textStyle1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin1"
                    android:text="34"
                    android:id="@id/textView6"
                    style="@style/textStyle1"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.3px"
                android:layout_alignParentBottom="true"
                android:background="@color/lightgrey">
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>




</LinearLayout>
