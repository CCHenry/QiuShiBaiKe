<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:context=".C.list.BaseListFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dip"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="13dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imageView0"
                android:layout_width="@dimen/h2"
                android:layout_height="@dimen/h2"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/imageView0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textStyle3"
                    android:layout_marginRight="@dimen/margin3"
                    android:text="新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容"/>

                <RelativeLayout
                    android:id="@id/relativeLayout0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/h2"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            />


                        <ImageView
                            android:id="@id/imageView2"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/h2"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/margin1"
                            android:layout_marginRight="@dimen/margin1"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"

                            />

                        <ImageView
                            android:id="@id/imageView3"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/h2"
                            android:layout_alignParentRight="true"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"

                            />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin1"
                    android:orientation="horizontal"

                    >

                    <TextView
                        style="@style/textStyle1"
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01-18 10:08"/>

                    <TextView
                        style="@style/textStyle1"

                        android:id="@id/textView2"
                        android:layout_marginLeft="@dimen/margin1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="凤凰网"/>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
